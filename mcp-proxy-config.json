{
  "mcpServers": {
    "twitter-mcp": {
      "command": "python",
      "args": ["-m", "src.x_twitter_mcp.mcp_server"],
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "description": "Twitter MCP Server with OAuth 2.0 support"
    }
  },
  "proxy": {
    "host": "0.0.0.0",
    "port": 9000,
    "allowOrigin": "*",
    "targetCommand": "python -m src.x_twitter_mcp.mcp_server"
  }
}
