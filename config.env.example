# Twitter OAuth Configuration
# Get these from https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# Server Configuration
HOST=127.0.0.1
PORT=8000

# OAuth Callback URL (must match your Twitter app settings)
TWITTER_REDIRECT_URI=http://127.0.0.1:8000/auth/callback

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite:///./twitter_accounts.db

# OAuth Security Settings
OAUTH_STATE_EXPIRE_SECONDS=3600
ACCESS_TOKEN_EXPIRE_MINUTES=60
